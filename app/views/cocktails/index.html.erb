<div class="banner">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <%= link_to 'Add Cocktail', new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail %></h2>
            <% sum = 0 %>
            <% cocktail.reviews.each do |review| %>
              <% sum += review.rating %>
            <% end %>
            <%= link_to cocktail.reviews.count > 0 ? '⭐' * (sum / cocktail.reviews.count) : 'Not Rated', cocktail %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>